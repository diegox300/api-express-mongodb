  "paths": {
    "/livros": {
      "get": {
        "summary": "Recupera todos os livros.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Livros"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Adiciona um livro",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/livros_body"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_201"
                }
              }
            }
          },
          "500": {
            "description": "Livro não encontrado.",
            "content": {
              "application/json": {
                "example": "Falha na requisição de criação do livro"
              }
            }
          }
        }
      }
